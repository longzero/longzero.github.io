.site-footer
  padding-top: 150px
  position: relative
  text-align: center
  height 650px
  &:before
  &:after
    content ''
    display: block
    position: absolute
    top 0
    left 0
    width 100%
    height 100%
  &:before
    background-image linear-gradient(rgba(255,255,255,0) 0%,#ddd 25%,#ddd)
    z-index: -1
  &:after
    background transparent url("/images/look-up.jpg") center bottom no-repeat
    z-index: 0
  a
    font-weight: 500
    text-decoration: none
  a:hover
    text-decoration: underline
  p
    margin-bottom: 1em;
  strong
    a
      font-size 1.2em
  .container
    position: relative
    z-index: 1
